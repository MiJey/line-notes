<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/note_list_item"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:background="@color/black">

    <ImageView
        android:id="@+id/image_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#099"
        android:layout_margin="1px"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_list_item_delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1px"
        android:src="@drawable/bg_square_stroke" />

    <TextView
        android:id="@+id/image_list_item_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="image path"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>